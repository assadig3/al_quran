<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== Permissions ===== -->
    <!-- اتصال وتحميل -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- منع النوم أثناء التحميل -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- خدمات Foreground عامة (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- نوع خدمة Foreground خاص بمزامنة/تنزيل البيانات (Android 14+) -->
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        tools:targetApi="34" />
    <!-- إشعارات (Android 13+) -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />
    <!-- تشغيل وسائط كخدمة مقدّمة -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- ✅ إزالة أي إذن AD_ID قد تضيفه المكتبات ترانزيتيف -->
    <uses-permission
        android:name="com.google.android.gms.permission.AD_ID"
        tools:node="remove" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuranKarim"
        android:localeConfig="@xml/locales_config"
        tools:targetApi="33">

        <!-- AppCompat locales للإصدارات الأقدم -->
        <meta-data
            android:name="androidx.appcompat.app.locale_config"
            android:resource="@xml/locales_config" />

        <!-- ✅ (اختياري موصى به) تعطيل جمع معرّف الإعلانات داخل Firebase Analytics -->
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />

        <!-- شاشة اختيار اللغة (Launcher) -->
        <activity
            android:name=".onboarding.LanguageSelectionActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".notify.NotificationActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.hag.al_quran.NOTIF_TOGGLE" />
                <action android:name="com.hag.al_quran.NOTIF_STOP" />
            </intent-filter>
        </receiver>

        <!-- الرئيسية -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- صفحة المصحف (مصدَّرة لتعمل مع PendingIntent من الإشعار) -->
        <activity
            android:name=".QuranPageActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />

        <!-- البحث -->
        <activity
            android:name=".search.SearchActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- ===== Services ===== -->

        <!-- خدمة تنزيل صفحات المصحف في الخلفية مع إشعار التقدم -->
        <service
            android:name=".download.PagesDownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- خدمة الصوت في المقدمة (إن كانت موجودة لديك) -->
        <service
            android:name=".audio.AudioPlaybackManager$ForegroundPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
    </application>
</manifest>
