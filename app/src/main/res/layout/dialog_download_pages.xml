<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center">

    <!-- حاوية لهوامش جانبية -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:gravity="center_horizontal">

        <!-- “بطاقة” بلا ظل بخلفية shape مع حدّ رفيع -->
        <LinearLayout
            android:id="@+id/dialogCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_dialog_no_shadow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layoutDirection="locale">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/download_title"
                android:textColor="@color/dialog_title"
                android:textSize="13sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/download_ready"
                android:textColor="@color/dialog_body"
                android:textSize="11sp"
                android:includeFontPadding="false" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="2dp"
                android:max="604"
                android:progress="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/pageCounter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dialog_body"
                    android:textSize="10sp"
                    android:includeFontPadding="false" />

                <TextView
                    android:id="@+id/percentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dialog_title"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- أزرار بتأثير Ripple -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_danger_text"
                    android:background="@drawable/btn_danger_filled"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnDownloadNow"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="@string/download_now"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn_primary_text"
                    android:background="@drawable/btn_primary_filled"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
